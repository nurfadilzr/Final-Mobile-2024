<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/categoryFragment"
    tools:context=".fragment.CategoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/hijau1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

<!--    <GridView-->
<!--        android:id="@+id/gridView_categories"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:numColumns="1"-->
<!--        android:verticalSpacing="16dp"-->
<!--        android:horizontalSpacing="16dp"-->
<!--        android:padding="16dp"-->
<!--        android:layout_marginTop="16dp"/>-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_gravity="center"
        tools:listitem="@layout/category"
        android:layout_marginTop="20dp"/>
<!--layout gamau berubah-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Products by Category"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/hijau1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="6"
        tools:listitem="@layout/product"
        android:layout_gravity="center"
        android:paddingBottom="50dp"
        android:visibility="gone"/>

</LinearLayout>